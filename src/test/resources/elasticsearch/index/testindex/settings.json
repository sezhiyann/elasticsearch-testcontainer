{
  "settings": {
    "analysis": {
      "filter": {
        "trigrams_filter": {
          "type": "ngram",
          "min_gram": 3,
          "max_gram": 15
        }
      },
      "analyzer": {
        "trigrams": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "trigrams_filter"
          ]
        },
        "whitespace_lowercase": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase"
          ]
        }
      }
    },
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "productUniqueCode": {
        "type": "keyword",
        "fields": {
          "search": {
            "type": "text",
            "analyzer": "whitespace_lowercase"
          }
        }
      },
      "brand": {
        "type": "keyword"
      },
      "year": {
        "type": "date",
        "format": "year"
      },
      "season": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "value": {
            "type": "keyword"
          }
        }
      },
      "colors": {
        "type": "nested",
        "properties": {
          "id": {
            "type": "keyword"
          },
          "value": {
            "type": "keyword"
          }
        }
      },
      "name": {
        "type": "keyword",
        "fields": {
          "search": {
            "type": "text",
            "analyzer": "trigrams"
          }
        }
      },
      "code": {
        "type": "keyword",
        "fields": {
          "search": {
            "type": "text",
            "analyzer": "trigrams"
          }
        }
      }
    },
    "dynamic": "strict"
  }
}